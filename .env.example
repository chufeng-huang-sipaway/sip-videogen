# OpenAI API key for agent orchestration
OPENAI_API_KEY=sk-...

# Google Gemini API key for image generation
GEMINI_API_KEY=...

# Google Cloud Project configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# GCS bucket for VEO video generation (must be in same region as GOOGLE_CLOUD_LOCATION)
SIP_GCS_BUCKET_NAME=your-bucket-name

# Enable Vertex AI for VEO
GOOGLE_GENAI_USE_VERTEXAI=True

# Local output directory for generated assets
SIP_OUTPUT_DIR=./output

# Default number of scenes (3-5 recommended)
SIP_DEFAULT_SCENES=3

# Default video duration per scene in seconds (4, 6, or 8)
SIP_VIDEO_DURATION=5

# Logging level (DEBUG, INFO, WARNING, ERROR)
SIP_LOG_LEVEL=INFO
